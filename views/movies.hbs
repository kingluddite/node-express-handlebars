<div class='movies-container'>
  <div class='box'>
    <div class='photo'>
      <img src='{{data.img}}' alt='yada' />
    </div>
    <div class='info'>
      <h1>{{data.title}}</h1>
      <br /><br />
      {{{shortText data.desc 100}}}
      <br /><br />
      {{#each data.extra}}
        <p>Released in {{year_released}}</p>
        <p>Filmed in {{film_location}}</p>
      {{/each}}
    </div>
  </div>
</div>
